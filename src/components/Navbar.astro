<script>
  const responsiveBtn = document.querySelector(".responsive_btn");
  const navbar = document.querySelector(".navbar");
  const sections = document.querySelectorAll("section");

  responsiveBtn.addEventListener("click", () => {
    navbar.classList.toggle("activo");
    sections.forEach((section) => section.classList.toggle("blur"));
  });

  // Agrega el siguiente código para asegurarte de que la clase "activo" no esté presente inicialmente
  document.addEventListener("DOMContentLoaded", () => {
    navbar.classList.remove("activo");
  });
</script>

<header>
  <div>
    <a href="#inicio">
      <img src="/cat.png" alt="Icono gato" />
    </a>
  </div>
  <nav class="navbar">
    <ul>
      <li><a href="#inicio"> Inicio</a></li>
      <li><a href="#momentos"> Momentos</a></li>
      <li><a href="#galeria"> Galeria</a></li>
