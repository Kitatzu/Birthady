<script>
  document.addEventListener("DOMContentLoaded", function () {
    const cardContainer = document.getElementById("cardId");
    const girarButton = document.getElementById("girarButton");

    girarButton.addEventListener("click", function () {
      cardContainer.classList.toggle("flipped");
      const textContainer = document.querySelector(".text_container");
      textContainer.classList.toggle("hidden");
    });
  });
</script>

<section id="inicio">
  <div class="card_container" id="cardId">
    <div class="text_container">
      <h1>Hola! Hoy es un dia especial</h1>
      <p>¿Estas lista?</p>
      <button id="girarButton"> Vamos!</button>
    </div>
    <div class="photo_container hidden">
      <span> Feliz Cumpleaños!!!</span>
      <img src="/img.jpg" alt="Imagen nuestra" />
    </div>
  </div>

  <div class="img_container">
    <img src="/birthdaycat.png" alt="Gato" />
  </div>
</section>

<style>
  section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 4.7rem;
    min-height: 40rem;
    color: #55493c;
  }

  /*  Rotacion */
  .card_container {
    max-width: 30rem; /* Ajusta el ancho según sea necesario */
    max-height: 20rem; /* Ajusta la altura según sea necesario */
    position: relative;
    transform-style: preserve-3d;
    transition: transform 1s ease;
    border-radius: 2rem;
    padding: 1rem;
    border: 5px solid #e1d5bd;
    margin-bottom: 4rem;
    margin-right: 2rem;
    perspective: 2000px;
  }

  .text_container,
  .photo_container {
    backface-visibility: hidden;
  }

  .flipped {
    transform: rotateY(180deg);
  }

  .text_container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
  }

  .text_container.hidden {
    display: none;
  }

  .text_container img {
    display: none; /* Oculta la imagen en el estado normal */
  }

  .photo_container {
    background-color: #52483c;
    border-radius: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 1rem 1rem 1rem;
    transform: rotateY(180deg);
  }

  .photo_container span {
    color: #e1d5bd;
    font-size: 2rem;
    font-weight: bold;
  }

  .photo_container img {
    border-radius: 1rem;
    display: block; /* Muestra la imagen cuando está girada */
    width: 60%;
  }

  .text_container h1 {
    background-color: #e1d5bd;
    font-size: 2rem;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
    padding: 1rem;
    font-weight: 600;
    text-align: center;
  }

  .text_container p {
    background-color: #e1d5bd;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    text-align: left;
    font-size: 1.5rem;
  }

  .text_container button {
    font-weight: bold;
    color: #cac0b4;
    border: none;
    background-color: #52483c;
    padding: 0.6rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: 1s ease;
  }

  .text_container button:hover {
    color: #52483c;
    background-color: #cac0b4;
    scale: 1.1;
  }

  .img_container {
    width: 40%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .img_container img {
    display: block;
    width: 100%;
  }

  @media (width < 768px) {
    section {
      margin-top: 8rem;
      display: flex;
      flex-direction: column;
      scroll-margin-top: 5rem;
    }

    h1 {
      font-size: 1.5rem;
    }

    .birthday {
      font-size: 2rem;
    }
  }
</style>
