<script>
  import superConfetti from "../scripts/confetti.js";

  document.addEventListener("DOMContentLoaded", function () {
    const cardContainer = document.getElementById("cardId");
    const girarButton = document.getElementById("girarButton");

    girarButton.addEventListener("click", function () {
      cardContainer.classList.toggle("flipped");
      const textContainer = document.querySelector(".text_container");
      textContainer.classList.toggle("hidden");
      superConfetti();
    });
  });

  document.addEventListener("click", function (event) {
    if (!event.target.closest("#cardId")) {
      const clickedInside = document
        .querySelector("#cardId *")
        .contains(event.target);
      if (!clickedInside) {
        const cardContainer = document.getElementById("cardId");
        cardContainer.classList.remove("flipped");

        // Ocultar el contenido de la cara trasera
        cardContainer.querySelector(".photo_container").classList.add("hidden");

        // Mostrar el contenido de la cara frontal
        cardContainer
          .querySelector(".text_container")
          .classList.remove("hidden");
      }
    }
  });
</script>

